<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_buyer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kudtarkarides.firebaseauth.BuyerActivity">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="79dp"
        android:id="@+id/textFirstName" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textFirstName"
        android:layout_alignRight="@+id/textFirstName"
        android:layout_alignEnd="@+id/textFirstName"
        android:layout_marginTop="87dp"
        android:id="@+id/textExp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="LAT"
        android:ems="10"
        android:layout_below="@+id/textExp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="73dp"
        android:id="@+id/editTextLat" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="LONG"
        android:ems="10"
        android:id="@+id/editTextLong"
        android:layout_below="@+id/editTextLat"
        android:layout_alignLeft="@+id/editTextLat"
        android:layout_alignStart="@+id/editTextLat"
        android:layout_marginTop="59dp" />

    <Button
        android:text="GetSeller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/buttonSellerDetails" />

</RelativeLayout>
